---
import Header from "../components/Header.astro";
import FixedButtons from "../components/FixedButtons.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="canonical" href={Astro.url.href} />
		<link rel="icon" type="image/jpg" href="/images/logo.png" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/bulma/bulma.min.css">
		<title>Woof & Work Marketing | Agencia de Marketing para Mascotas</title>
		<meta name="description" content="Agencia de marketing digital especializada en negocios del sector de mascotas. Impulsa tu negocio veterinario o tienda de mascotas con estrategias personalizadas." />
		<meta name="keywords" content="marketing mascotas, marketing veterinario, marketing digital mascotas, marketing pet shops, publicidad veterinaria, SEO veterinario" />
		<meta name="author" content="Woof & Work Marketing" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="Spanish" />
		<meta name="revisit-after" content="7 days" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="theme-color" content="#4285f4" />
		<link rel="apple-touch-icon" href="/public/images/logo.jpg" />
		<meta property="og:title" content="Woof & Work Marketing | Agencia de Marketing para Mascotas" />
		<meta property="og:description" content="Especialistas en marketing digital para negocios del sector de mascotas y veterinarios." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url.href}/>
		<meta property="og:image" content={Astro.url.href + "images/webPreview.webp"} />
		<meta property="og:locale" content="es_ES" />
		<meta property="og:site_name" content="Woof & Work Marketing" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Woof & Work Marketing | Agencia de Marketing para Mascotas" />
		<meta name="twitter:description" content="Especialistas en marketing digital para negocios del sector de mascotas y veterinarios." />
		<meta name="twitter:image" content={Astro.url.href + "images/webPreview.webp"} />
		<meta name="twitter:site" content="@woofandwork" />
		<meta name="twitter:creator" content="@MikelEcheve" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="alternate" hreflang="es" href={Astro.url.href} />
		<script is:inline type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Woof & Work Marketing",
				"url": "https://www.marketinganimales.com/",
				"logo": "https://www.marketinganimales.com/images/logo.png",
				"sameAs": [
					"https://www.facebook.com/ForoEuropeo",
					"https://www.x.com/x",
					"https://www.instagram.com/foroeuropeo"
				],
				"contactPoint": {
					"@type": "ContactPoint",
					"telephone": "+34-123-456-789",
					"contactType": "Customer Service",
					"areaServed": "ES",
					"availableLanguage": ["Spanish", "English"]
				}
			}
		</script>
	</head>
	<body>
		<Header />
		<slot />
		<FixedButtons />
		<Footer />
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter Tight', sans-serif;
		scroll-behavior: smooth;
	}

	#navBarMenu {
		position: sticky;
		top: 0;
		z-index: 1000;
		width: 100%;
	}
</style>

<script is:inline type="module">
	// Check if device is not mobile/tablet
	if (window.matchMedia("(min-width: 1024px)").matches) {
		// Add a custom cursor to the page
		const cursor = document.createElement('div');
		cursor.style.cssText = 'width: 30px; height: 30px; border-radius: 50%; position: fixed; pointer-events: none; mix-blend-mode: difference; background: white; z-index: 9999;';
		document.body.appendChild(cursor);

		document.addEventListener('mousemove', (e) => {
			cursor.style.left = `${e.clientX - 10}px`;
			cursor.style.top = `${e.clientY - 10}px`;
		});
	}
</script>
