---
import Header from "../components/Header.astro";
import FixedButtons from "../components/FixedButtons.astro";
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/bulma/bulma.min.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
		<title>Astro Basics</title>
	</head>
	<body>
		<Header />
		<slot />
		<FixedButtons />
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter Tight', sans-serif;
		scroll-behavior: smooth;
	}

	#navBarMenu {
		position: sticky;
		top: 0;
		z-index: 1000;
		width: 100%;
	}
</style>

<script is:inline type="module">
	// Check if device is not mobile/tablet
	if (window.matchMedia("(min-width: 1024px)").matches) {
		// Add a custom cursor to the page
		const cursor = document.createElement('div');
		cursor.style.cssText = 'width: 30px; height: 30px; border-radius: 50%; position: fixed; pointer-events: none; mix-blend-mode: difference; background: white; z-index: 9999;';
		document.body.appendChild(cursor);

		document.addEventListener('mousemove', (e) => {
			cursor.style.left = `${e.clientX - 10}px`;
			cursor.style.top = `${e.clientY - 10}px`;
		});
	}
</script>
