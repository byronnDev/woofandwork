---
import FixedButtons from "../components/FixedButtons.astro";
import Footer from "../components/Footer.astro";


interface Props {
	title?: string;
	meta?: Array<{
		name?: string;
		property?: string;
		content?: string;
		rel?: string;
		href?: string;
	}>;
}

const {
	title = "Woof & Work Marketing | Agencia de Marketing para Mascotas",
	meta = [
		{
			name: "description",
			content: "Agencia de marketing digital especializada en negocios del sector de mascotas. Impulsa tu negocio veterinario o tienda de mascotas con estrategias personalizadas."
		},
		{
			name: "keywords",
			content: "marketing mascotas, marketing veterinario, marketing digital mascotas, marketing pet shops, publicidad veterinaria, SEO veterinario"
		},
		{
			name: "robots",
			content: "index, follow"
		},
		{
			name: "author",
			content: "Woof & Work Marketing"
		},
		{
			name: "language",
			content: "Spanish"
		},
		{
			name: "revisit-after",
			content: "7 days"
		},
		{
			property: "og:title",
			content: "Woof & Work Marketing | Agencia de Marketing para Mascotas"
		},
		{
			property: "og:description",
			content: "Especialistas en marketing digital para negocios del sector de mascotas y veterinarios."
		},
		{
			property: "og:type",
			content: "website"
		},
		{
			property: "og:url",
			content: Astro.url.href
		},
		{
			property: "og:image",
			content: Astro.url.href + "images/webPreview.webp"
		},
		{
			property: "og:locale",
			content: "es_ES"
		},
		{
			property: "og:site_name",
			content: "Woof & Work Marketing"
		},
		{
			property: "og:image:width",
			content: "1200"
		},
		{
			property: "og:image:height",
			content: "630"
		},
		{
			name: "twitter:card",
			content: "summary_large_image"
		},
		{
			name: "twitter:title",
			content: "Woof & Work Marketing | Agencia de Marketing para Mascotas"
		},
		{
			name: "twitter:description",
			content: "Especialistas en marketing digital para negocios del sector de mascotas y veterinarios."
		},
		{
			name: "twitter:image",
			content: Astro.url.href + "images/webPreview.webp"
		},
		{
			name: "twitter:site",
			content: "@woofandwork"
		},
		{
			name: "twitter:creator",
			content: "@MikelEcheve"
		}
	]
} = Astro.props;

---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="canonical" href={Astro.url.href} />
		<link rel="icon" type="image/avif" href="/images/logo.avif" />
		<link rel="icon" type="image/webp" href="/images/logo.webp" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="/fontawesome/css/all.min.css">
		<link rel="stylesheet" href="/bulma/bulma.min.css">
			<title>{title}</title>
		{meta.map((m) => (
			m.name ? <meta name={m.name} content={m.content} /> :
			m.property ? <meta property={m.property} content={m.content} /> :
			null
		))}
			<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<link rel="apple-touch-icon" href="/images/logo.avif" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<link rel="alternate" hreflang="es" href={Astro.url.href} />
		<script defer is:inline type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Organization",
				"name": "Woof & Work Marketing",
				"url": "https://www.marketinganimales.com/",
				"logo": "https://www.marketinganimales.com/images/logo.webp",
				"sameAs": [
					"https://www.facebook.com/ForoEuropeo",
					"https://www.x.com/x",
					"https://www.instagram.com/foroeuropeo"
				],
				"contactPoint": {
					"@type": "ContactPoint",
					"telephone": "+34-123-456-789",
					"contactType": "Customer Service",
					"areaServed": "ES",
					"availableLanguage": ["Spanish", "English"]
				}
			}
		</script>
	</head>
	<body>
		<slot />
		<FixedButtons />
	</body>
</html>
<style is:global>
	* {
		box-sizing: border-box;
	}
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: 'Inter Tight', sans-serif;
		scroll-behavior: smooth;
		@media (prefers-color-scheme: light) {
			background-color: #f5f5f5;
		}
	}

	#navBarMenu {
		position: sticky;
		top: 0;
		z-index: 1000;
		width: 100%;
	}
</style>

<script is:inline type="module">
	// Check if device is not mobile/tablet
	if (window.matchMedia("(min-width: 1024px)").matches) {
		// Add a custom cursor to the page
		const cursor = document.createElement('div');
		cursor.style.cssText = 'width: 30px; height: 30px; border-radius: 50%; position: fixed; pointer-events: none; mix-blend-mode: difference; background: white; z-index: 9999;';
		document.body.appendChild(cursor);

		document.addEventListener('mousemove', (e) => {
			cursor.style.left = `${e.clientX - 10}px`;
			cursor.style.top = `${e.clientY - 10}px`;
		});
	}
</script>
