---
import ReunionButton from './ReunionButton.astro'
import Typewriter from './Typewriter.astro'
---
<div class="hero-body">
    <div class="container p-6">
        <div class="columns is-vcentered">
            <div class="column">
                <h1 class="title is-1 is-size-2-tablet is-size-3-mobile has-text-weight-bold" style="text-rendering: optimizeLegibility; line-height: 1.2;">
                    Woof & Work Marketing
                </h1>
                <p class="subtitle is-4 has-text-grey" style="min-height: 4.5rem; line-height: 1.5;">
                    <Typewriter />
                </p>
                
                <ReunionButton />
            </div>
            <div class="column is-hidden-mobile animate-slide-in">
                <figure class="image is-4by3">
                    <picture>
                        <source
                            srcset="/images/dog-grooming.avif"
                            type="image/avif"
                        />
                        <source
                            srcset="/images/dog-grooming.webp"
                            type="image/webp"
                        />
                        <img 
                            src="/images/dog-grooming.webp"
                            alt="Servicio profesional de aseo y peluquerÃ­a canina - Woof & Work Marketing"
                            width="800"
                            height="600"
                            loading="eager"
                            decoding="async"
                            class="is-rounded transition-transform hover-effect"
                        />
                    </picture>
                </figure>
            </div>
        </div>
    </div>
</div>  

<style>
    .animate-slide-in {
        animation: slideIn 1s ease-out;
        opacity: 0;
        animation-fill-mode: forwards;
    }

    @keyframes slideIn {
        from {
            transform: translateX(50px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .hover-effect {
        transition: transform 0.3s ease;
    }

    .hover-effect:hover {
        transform: scale(1.05);
    }
</style>