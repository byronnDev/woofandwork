---
import ReunionButton from './ReunionButton.astro'
import Typewriter from './Typewriter.astro'
---
<div class="hero-body">
    <div class="container p-6">
        <div class="columns is-vcentered">
            <div class="column">
                <h1 class="title is-0 is-size-1-mobile has-text-weight-bold">Impulsa tu Negocio de Estilismo Canino</h1>
                <p class="subtitle is-4 has-text-grey">
                    <Typewriter />
                </p>
                
                <ReunionButton />
            </div>
            <div class="column is-hidden-mobile animate-slide-in">
                <figure class="image is-4by3">
                    <img 
                        src="/src/assets/images/dog-grooming.jpg" 
                        alt="Dog grooming" 
                        class="is-rounded transition-transform hover-effect"
                    />
                </figure>
            </div>
        </div>
    </div>
</div>

<style>
    .animate-slide-in {
        animation: slideIn 1s ease-out;
        opacity: 0;
        animation-fill-mode: forwards;
    }

    @keyframes slideIn {
        from {
            transform: translateX(50px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    .hover-effect {
        transition: transform 0.3s ease;
    }

    .hover-effect:hover {
        transform: scale(1.05);
    }
</style>