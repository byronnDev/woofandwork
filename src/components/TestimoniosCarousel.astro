---

<div class="container">
    <div class="slider-mask">
        <div class="slider-track">
            {testimonios.map(testimonio => (
                <div class="slider-item">
                    <TestimonioItem nombre={testimonio.nombre} comentario={testimonio.comentario} />
                </div>
            ))}
            {testimonios.map(testimonio => (
                <div class="slider-item">
                    <TestimonioItem nombre={testimonio.nombre} comentario={testimonio.comentario} />
                </div>
            ))}
        </div>
    </div>
</div>

<style>
    .slider-mask {
        position: relative;
        overflow: hidden;
        width: 100%;
        padding: 2rem 0;
    }
    
    .slider {
        position: relative;
        overflow: hidden;
        padding: 2rem 0;
    }

    .slider-track {
        display: flex;
        animation: scroll 20s linear infinite;
        position: relative;
    }

    .slider-item {
        flex: 0 0 100%; /* Por defecto en móvil muestra 1 */
        padding: 0 1rem;
    }

    @media (min-width: 640px) {
        .slider-item {
            flex: 0 0 50%; /* En tablets muestra 2 */
        }
    }

    @media (min-width: 1024px) {
        .slider-item {
            flex: 0 0 33.333%; /* En PC muestra 3 */
        }
    }

    .slider-mask::before,
    .slider-mask::after {
        content: "";
        position: absolute;
        top: 0;
        z-index: 10;
        width: 15%;
        height: 100%;
        pointer-events: none;
    }

    .slider-mask::before {
        left: 0;
        background: linear-gradient(90deg, var(--bg-color, #ffffff) 0%, rgba(255, 255, 255, 0) 100%);
    }

    .slider-mask::after {
        right: 0;
        background: linear-gradient(270deg, var(--bg-color, #ffffff) 0%, rgba(255, 255, 255, 0) 100%);
    }

    @keyframes scroll {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-50%);
        }
    }
</style>