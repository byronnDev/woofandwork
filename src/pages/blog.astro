---
import Header from '../components/Header.astro';
import Layout from '../layouts/Layout.astro';

const posts = await Astro.glob('../content/posts/*.md');
---

<Layout title="Blog">
    <Header />
    <section class="section">
        <h1 class="title is-1 has-text-centered mb-6">Posts</h1>
        
        <div class="columns is-multiline is-centered px-3">
            {posts.map((post) => (
                <div class="column is-12-mobile is-10-tablet is-10-desktop">
                    <article class="box post-box">
                        <div class="columns is-vcentered is-multiline">
                            <div class="column is-12-mobile is-5-tablet">
                                {post.frontmatter.image && (
                                    <figure class="image is-3by2">
                                        <img src={post.frontmatter.image} alt={post.frontmatter.title} class="is-rounded" />
                                    </figure>
                                )}
                            </div>
                            <div class="column is-12-mobile is-7-tablet">
                                <h2 class="title is-2-desktop is-3-tablet is-4-mobile mb-3 post-title">{post.frontmatter.title}</h2>
                                <p class="subtitle is-6 post-date mb-4">{post.frontmatter.date}</p>
                                <div class="content">
                                    <p class="is-clamp-4 post-description">{post.frontmatter.description || post.rawContent().slice(0, 300) + '...'}</p>
                                </div>
                                <a href={post.url} class="button is-primary is-rounded is-medium-tablet is-normal-mobile">
                                    <span>Leer m√°s</span>
                                    <span class="icon">
                                        <i class="fas fa-arrow-right"></i>
                                    </span>
                                </a>
                            </div>
                        </div>
                    </article>
                </div>
            ))}
        </div>
    </section>
</Layout>

<style>
    .is-clamp-4 {
        display: -webkit-box;
        -webkit-line-clamp: 4;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    @media screen and (max-width: 768px) {
        .post-title {
            text-align: center;
        }

        .post-date {
            text-align: center;
        }

        .button {
            display: block;
            width: 100%;
            margin-top: 1rem;
        }
    }
</style>